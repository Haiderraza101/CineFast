<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- CineFAST Header -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cine"
                android:textColor="#FF0000"
                android:textSize="24sp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAST"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Items"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Snacks &amp; Drinks"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="24dp" />

        <!-- Popcorn Item Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/snack_card_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
            
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="#FF9800"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_popcorn" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popcorn"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large / Buttered"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$8.99"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnMinusPopcorn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#3e4a6d"
                        android:text="—"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp" />

                    <TextView
                        android:id="@+id/tvQtyPopcorn"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btnPlusPopcorn"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#FF0000"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Nachos Item Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/snack_card_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
            
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="#FFC107"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_nachos" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nachos"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="With Cheese Dip"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$7.99"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnMinusNachos"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#3e4a6d"
                        android:text="—"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp" />

                    <TextView
                        android:id="@+id/tvQtyNachos"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btnPlusNachos"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#FF0000"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Soft Drink Item Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/snack_card_bg"
            android:orientation="horizontal"
            android:padding="16dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">
            
            <androidx.cardview.widget.CardView
                android:layout_width="80dp"
                android:layout_height="80dp"
                app:cardBackgroundColor="#F44336"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_soda" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Soft Drink"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Large / Any Flavor"
                    android:textColor="#A0A0A0"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$5.99"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="4dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <Button
                        android:id="@+id/btnMinusSoda"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#3e4a6d"
                        android:text="—"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp" />

                    <TextView
                        android:id="@+id/tvQtySoda"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <Button
                        android:id="@+id/btnPlusSoda"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:backgroundTint="#FF0000"
                        android:text="+"
                        android:textColor="#FFFFFF"
                        app:cornerRadius="8dp"
                        android:minWidth="0dp"
                        android:minHeight="0dp"
                        android:padding="0dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Confirm Button -->
        <View
            android:layout_width="match_parent"
            android:layout_height="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Total Snacks"
                    android:textColor="#666666"
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/tvSnacksTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$0.00"
                    android:textColor="#FFFFFF"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btnConfirmSnacks"
                android:layout_width="160dp"
                android:layout_height="56dp"
                android:text="Confirm"
                android:textColor="#FFFFFF"
                android:backgroundTint="#FF0000"
                android:textStyle="bold"
                app:cornerRadius="28dp"
                android:textAllCaps="false" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
